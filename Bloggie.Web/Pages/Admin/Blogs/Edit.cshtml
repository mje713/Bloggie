@page "{id:Guid}"
@model Bloggie.Web.Pages.Admin.Blogs.EditModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Edit Blog Post</h1>
    </div>

</div>

<div>
    <div class="container">
        <form method="post">
            <div class="mb-3">
                <label for="heading" class="form-label">Id</label>
                <input type="text" class="form-control" id="id" asp-for="BlogPost.id" readonly>
            </div>

            <div class="mb-3">
                <label for="pageTitle" class="form-label">Page Title</label>
                <input type="text" class="form-control" id="pageTitle" asp-for="BlogPost.PageTitle">
            </div>

            <div class="mb-3">
                <label for="pageTitle" class="form-label">Content</label>
                <textarea class="form-control" id="content" asp-for="BlogPost.Content"></textarea>
            </div>

            <div class="mb-3">
                <label for="shortDescription" class="form-label">Short Description</label>
                <input type="text" class="form-control" id="shortDescription" asp-for="BlogPost.ShortDescription">
            </div>

            <div class="mb-3">
                <label for="featuredImageUrl" class="form-label">Image Url</label>
                <input type="text" class="form-control" id="featuredImageUrl" asp-for="BlogPost.FeturedImageUrl">
            </div>

            <div class="mb-3">
                <label for="urlHandle" class="form-label">Url Handle</label>
                <input type="text" class="form-control" id="urlHandle" asp-for="BlogPost.UrlHandle">
            </div>

            <div class="mb-3">
                <label for="date" class="form-label">Date</label>
                <input type="date" class="form-control" id="date" asp-for="BlogPost.PublishedDate">
            </div>

            <div class="mb-3">
                <label for="author" class="form-label">Author</label>
                <input type="text" class="form-control" id="author" asp-for="BlogPost.Author">
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="" id="isVisible" asp-for="BlogPost.Visible">
                <label class="form-check-label" for="isVisible">
                    Is Visible
                </label>
            </div>

            <div class="mb-3">
                <button class="btn btn-primary">Submit</button>
            </div>




        </form>
    </div>
</div>
